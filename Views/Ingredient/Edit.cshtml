@model Ingredient

@{
    ViewBag.Title = $"Edit {Model.Name}";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow rounded-3">
            <div class="card-header bg-secondary text-white text-center fs-4 fw-semibold">
                Edit @Model.Name
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="IngredientId" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-medium"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-check-circle me-1"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-danger ms-2">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<Ingredient>

@{
    ViewBag.Title = "Restaurant Ingredients";
}

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header d-flex justify-content-between align-items-center bg-gradient text-black">
            <h4 class="mb-0">Ingredients</h4>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Create New Ingredient
            </a>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                                <th class="text-center" style="width: 300px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => i.Name)</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@i.IngredientId" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> Details                                        
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@i.IngredientId" class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-eye"></i> Update
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@i.IngredientId" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-eye"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No ingredients found.</p>
            }
        </div>
    </div>
</div>

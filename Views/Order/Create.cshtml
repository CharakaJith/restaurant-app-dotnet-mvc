@model OrderViewModel

@{
    ViewBag.Title = "Create order";
}

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header d-flex justify-content-between align-items-center bg-gradient text-black">
            <h4 class="mb-0">Place order</h4>
        </div>

        <div class="card-body">
            @if(Model.Products.Any())
            {
                <div class="row g-4">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="card h-100 shadow-sm border-0">
                                <form asp-action="AddItem" method="post">
                                    <img src="@Url.Content($"~/images/{product?.ImageUrl}")"
                                         class="card-img-top object-fit-cover"
                                         style="height: 180px;" alt="@product.ProductName" />

                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@product.ProductName ($ @product.Price)</h5>

                                        <input type="hidden" value="@product.ProductId" name="prodId" />
                                        <input type="number" name="prodQty" class="form-control mb-2" placeholder="Enter quantity" />

                                        <div class="mt-auto d-flex justify-content-between flex-wrap gap-2">
                                            <button type="submit" class="btn btn-sm btn-outline-success w-100">
                                                Add to Cart
                                            </button>
                                        </div>
                                    </div>
                                </form>                                
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No products found.</p>
            }
        </div>
    </div>
</div>


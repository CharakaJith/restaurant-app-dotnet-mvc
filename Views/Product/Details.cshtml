@model Product

@{
    ViewBag.Title = "Product Details";
}

<div class="container mt-5">
    <div class="card shadow rounded border-0">
        <div class="row g-0">
            <!-- Product Image with Margin -->
            <div class="col-md-5 d-flex align-items-center">
                <div class="p-3 w-100">
                    <img src="@Url.Content($"~/images/{Model?.ImageUrl}")"
                         alt="@Model.ProductName"
                         class="img-fluid rounded object-fit-cover w-100"
                         style="max-height: 350px;" />
                </div>
            </div>

            <!-- Product Details -->
            <div class="col-md-7">
                <div class="card-body d-flex flex-column h-100">
                    <h3 class="card-title">@Model.ProductName</h3>
                    <p class="card-text text-muted">@Model.ProductDescription</p>
                    <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
                    <p class="card-text"><strong>Available Stock:</strong> @Model.Stock</p>

                    <!-- Ingredient List -->
                    <h5 class="mt-4">Ingredients</h5>
                    @if (Model.ProductIngredients?.Any() == true)
                    {
                        <ul class="list-group list-group-flush mb-3">
                            @foreach (var pi in Model.ProductIngredients)
                            {
                                var ing = pi.Ingredient;
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a asp-controller="Ingredient" asp-action="Details" asp-route-id="@ing.IngredientId" class="text-decoration-none">
                                        @ing.Name
                                    </a>
                                    <i class="bi bi-arrow-right-short"></i>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No ingredients linked to this product.</p>
                    }

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>